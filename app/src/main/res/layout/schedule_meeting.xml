<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteSmoke"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".register">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="30dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="15dp"
                    android:text="For"
                    android:textColor="@color/black" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="276dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:background="@color/white"
                    android:ems="10"
                    android:hint="Assignee"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="#7F8C8D" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/In_Schedulemeeting"
                    android:layout_width="30dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="15dp"
                    android:text="In"
                    android:textColor="@color/black" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/for_schedulemeeting"
                    android:layout_width="286dp"
                    android:layout_height="50dp"

                    android:background="@color/white"
                    android:ems="10"
                    android:hint="Meeting Host"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="#7F8C8D" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="   Title Of Meeting"
            android:textColor="@color/black" />


        <EditText
            android:id="@+id/editText6"
            android:layout_width="294dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="      Enter Here"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="#7F8C8D" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Project Description"
                android:textColor="@color/black" />

            <EditText
                android:layout_width="276dp"
                android:layout_height="99dp"
                android:hint="Enter Here"
                android:background="@color/whiteSmoke"/>

        </LinearLayout>

        <TextView
            android:id="@+id/meetingtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="      Due Date"
            android:fontFamily="@font/sfui_medium"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/DueDate_meetingbtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:background="@color/white"
            android:ems="10"

            android:text="Select Date"
android:fontFamily="@font/lato_bold"
            android:textColor="@color/whiteSmoke"
            android:textColorHint="#7F8C8D" />
       <TextView
        android:id="@+id/dueTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="      Due Time"
           android:fontFamily="@font/sfui_medium"
        android:textColor="@color/black" />

        <Button
            android:id="@+id/DueTime_meetingbtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:background="@color/white"
            android:ems="10"
            android:text="Select Time"
android:fontFamily="@font/lato_bold"
            android:textColor="@color/whiteSmoke"
            android:textColorHint="#7F8C8D" />


        <TextView
            android:id="@+id/AddteamMember"
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="       Add Team Member"
            android:textColor="@color/black" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="68dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done" />


    </LinearLayout>

</ScrollView>